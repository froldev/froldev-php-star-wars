{% extends 'layout.html.twig' %}

{% block title %}Star Wars - les Personnages{% endblock %}

{% block content %}
    <div class="row">
        <h1 class="col-12">les personnages</h1>
    </div>
    <nav class="row">
        <a href="/figure/add" class="btn sentinel" >ajouter un personnage</a>
    </nav>
    <div class="row detail">
        {% for figure in figures %}
            <div class="col-md-4 col-sm-12 text-center card-view">
                <a href="/figure/details/{{figure.id}}">
                    <img src="{{figure.picture}}" alt="{{figure.name}}" border="0">
                    <div class="card-img-overlay d-flex flex-column justify-content-end">
                        <h5>{{figure.name}}</h5>
                    </div>
                </a>
            </div>
        {% else %}
            <div class="col-12 text-center">Alors jeune padawan, tu n'as toujours pas de personnages à nous présenter!
            N'hésites pas en ajouter quelques valeureux....</div>
        {% endfor %}
    </div>

{% endblock %}
