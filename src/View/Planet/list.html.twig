{% extends 'layout.html.twig' %}

{% block title %}Star Wars - les Planètes{% endblock %}

{% block content %}
    <div class="row">
        <h1 class="col-12">les planètes</h1>
    </div>
    <nav class="row">
        <a href="/planet/add" class="btn sentinel" >ajouter une planète</a>
    </nav>
    <div class="row detail">
        {% for planet in planets %}
            <div class="col-md-4 col-sm-12 text-center card-view">
                <a href="/planet/details/{{planet.id}}">
                    <img src="{{planet.picture}}" alt="{{planet.name}}" border="0">
                    <div class="card-img-overlay d-flex flex-column justify-content-end">
                        <h5>{{planet.name}}</h5>
                    </div>
                </a>
            </div>
        {% else %}
            <div class="col-12 text-center">Il y a de nombreuses planètes dans la galaxie jeune padawan, 
            n'hésites pas à en visiter une et à la rajouter à cette liste désespérément vide....</div>
        {% endfor %}
    </div>
{% endblock %}
