{% extends 'layout.html.twig' %}

{% block title %}Star Wars - les Races et les Espèces{% endblock %}

{% block content %}
    <div class="row">
        <h1 class="col-12">les races et espèces</h1>
    </div>
    <nav class="row">
        <a href="/beast/add" class="btn sentinel" >ajouter une race ou une espèce</a>
    </nav>
    <div class="row detail">
        {% for beast in beasts %}
            <div class="col-md-4 col-sm-12 text-center card-view">
                <a href="/beast/details/{{beast.id}}">
                    {% if beast.picture %}
                        <img src="{{beast.picture}}" alt="{{beast.name}}" border="0">
                    {% else %}
                        <img src="{{noPicture}}" alt="Pas d'image" border="0">
                    {% endif %}
                    <div class="card-img-overlay d-flex flex-column justify-content-end">
                        <h5>{{beast.name}}</h5>
                    </div>
                </a>
            </div>
        {% else %}
            <div class="col-12 text-center">Alors jeune padawan, il n'y a rien qui traine : pas d'espèces ni races....</div>
        {% endfor %}
    </div>
{% endblock %}
