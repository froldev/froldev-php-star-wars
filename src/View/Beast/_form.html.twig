<form method="post" enctype="multipart/form-data" class="mb-3" >
    <div class="form-row">
        <div class="form-group col-12 col-md-6">
            <label for="name">nom :</label>
            <input type="text" class="form-control" name="name" value="{{beast.name}}" >
            <div class="invalid-feedback sith">
                {{ nameError }}
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            {% if beast.picture %}
                <label for="new-picture">image :</label>
            {% endif %}
            <label class="label-picture col-12">{{ pictureName }}</label>
            <input type="hidden" name="picture" value="{{ beast.picture }}" >
            <input type="file" id="new-picture" name="new-picture" class="form-control"  />
            <div class="invalid-feedback sith">
                {{ pictureError }}
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            <label for="size">taille (en mètre):</label>
            <input type="text" class="form-control" name="size" id="size" value="{{beast.size}}" />
            <div class="invalid-feedback sith">
                {{ sizeError }}
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            <label for="planet">planète :</label>
            <select name="planet" class="custom-select" id="planet">
                <option value=""></option>
                {% for planet in planets %}
                <option value="{{planet.id}}" {{ beast.id_planet == planet.id ? "selected" }}>{{planet.name}}</option>
                {% endfor %}
            </select>
            <div class="invalid-feedback sith">
                {{ planetError }}
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            <label for="area">surface :</label>
            <input type="text" class="form-control" name="area" value="{{beast.area}}" >
            <div class="invalid-feedback sith">
                {{ areaError }}
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            <label for="movies">première apparition :</label>
            <select name="movie" class="custom-select" id="movie">
                <option value=""></option>
                {% for movie in movies %}
                <option value="{{movie.id}}" {{ beast.id_movie == movie.id ? "selected" }}>{{movie.title}}</option>
                {% endfor %}
            </select>
            <div class="invalid-feedback sith">
                {{ movieError }}
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-12">
            <input type="submit" value="Valider" class="float-right consular">
        </div>
    </div>
</form>
